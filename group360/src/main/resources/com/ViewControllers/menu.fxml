<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane fx:id="mainPane" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.ViewControllers.menuController">
   <children>
      <VBox fx:id="outerBoxVBox" prefHeight="400.0" prefWidth="600.0">
         <children>
            <HBox fx:id="outerBoxHBox" prefHeight="45.0" prefWidth="600.0" spacing="20.0">
               <children>
                  <Button fx:id="byNameButton" mnemonicParsing="false" onAction="#onByName" prefHeight="25.0" prefWidth="90.0" text="Sort by Name">
                     <HBox.margin>
                        <Insets left="10.0" top="10.0" />
                     </HBox.margin></Button>
                  <Button fx:id="byPriceButton" mnemonicParsing="false" onAction="#onByPrice" prefHeight="25.0" prefWidth="90.0" text="Sort by Price">
                     <HBox.margin>
                        <Insets top="10.0" />
                     </HBox.margin></Button>
                  <Button fx:id="byVeganButton" mnemonicParsing="false" onAction="#onByVegan" prefHeight="25.0" prefWidth="98.0" text="Sort by Vegan">
                     <HBox.margin>
                        <Insets top="10.0" />
                     </HBox.margin>
                  </Button>
                  <Button fx:id="cartButton" mnemonicParsing="false" onAction="#onCart" text="Cart">
                     <HBox.margin>
                        <Insets left="80.0" top="10.0" />
                     </HBox.margin>
                  </Button>
                  <Button fx:id="backButton" mnemonicParsing="false" onAction="#onBack" text="Back">
                     <HBox.margin>
                        <Insets top="10.0" />
                     </HBox.margin></Button>
               </children>
            </HBox>
            <ListView fx:id="menuListView" prefHeight="358.0" prefWidth="604.0" />
         </children>
      </VBox>
   </children>
</AnchorPane>
